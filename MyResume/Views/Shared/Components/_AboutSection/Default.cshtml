@model List<ResultAboutSectionDto>
@foreach (var item in Model)
{

    <div class="container-xxl py-6" id="about">
        <div class="container">
            <div class="row g-5">
                <div class="col-lg-6 wow fadeInUp" data-wow-delay="0.1s">
                    <div class="d-flex align-items-center mb-5">
                        <div class="years flex-shrink-0 text-center me-4">
                            <h1 class="display-1 mb-0">@ViewBag.time </h1>
                            <h5 class="mb-0">Günlük</h5>
                        </div>
                        <h3 class="lh-base mb-0">Kodlama ve Yazılım Geliştirme Deneyimi</h3>
                    </div>
                    <p class="mb-4">@item.Description</p>
                    <p class="mb-3"><i class="far fa-check-circle text-primary me-3"></i>@item.Item1</p>
                    <p class="mb-3"><i class="far fa-check-circle text-primary me-3"></i>@item.Item2</p>
                    <p class="mb-3"><i class="far fa-check-circle text-primary me-3"></i>@item.Item3</p>
                  
                </div>
                <div class="col-lg-6 wow fadeInUp" data-wow-delay="0.5s">
                    <div class="row g-3 mb-4">
                        <div class="col-sm-6">
                            <img class="img-fluid rounded" src="@item.AboutImage1" alt="">
                        </div>
                        <div class="col-sm-6">
                            <img class="img-fluid rounded" src="@item.AboutImage2" alt="">
                        </div>
                    </div>
                    <div class="d-flex align-items-center mb-3">
                        <h5 class="border-end pe-3 me-3 mb-0">Mutlu Müşteriler</h5>
                        <h2 class="text-primary fw-bold mb-0" data-toggle="counter-up">7</h2>
                    </div>
                    <p class="mb-4">Proje bazlı çalıştığım kişilerden hep olumlu dönüşler aldım.</p>
                    <div class="d-flex align-items-center mb-3">
                        <h5 class="border-end pe-3 me-3 mb-0">Tamamlanan Proje Sayısı</h5>
                        <h2 class="text-primary fw-bold mb-0" data-toggle="counter-up">23</h2>
                    </div>
                    <p class="mb-0">Kendimi günden güne geliştiriyorum ve derinlemesine bilgiler katmaya devam ediyorum.</p>
                </div>
            </div>
        </div>
    </div>
}