@model UpdateSkillDto
@{
    ViewData["Title"] = "Update";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h3>Yetenek Güncelle</h3>

<form method="post">
    <input type="hidden" asp-for="Id" />
    <label>Yetenek</label>
    <input type="text" asp-for="SkillName" class="form-control" />
    <br />
    <label>Yüzdelik Değer</label>
    <input type="number" asp-for="Value" class="form-control" />
    <br />
    <label>Arka Plan Renk kodu</label>
    <input type="text" asp-for="BgColor" class="form-control" />
    <br />

    <button class="btn btn-primary" ><i class="fas fa-pen"></i> Güncelle</button>
</form>