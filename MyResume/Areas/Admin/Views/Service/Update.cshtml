@model UpdateServiceDto
@{
    ViewData["Title"] = "Update";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h3>Hizmet Güncelleme</h3>

<form method="post">
    <input type="hidden" asp-for="Id" />
    <label>Hizmet Adı</label>
    <input type="text" asp-for="Title" class="form-control" />
    <br>
    <label>Açıklama</label>
    <textarea asp-for="Description" class="form-control" rows="5"></textarea>
    <br />
    <label>Fiyat</label>
    <input type="text" asp-for="Price" class="form-control"  />
    <br />
    <label>İkon</label>
    <input type="text" asp-for="Icon" class="form-control" />
    <br>
    <button class="btn btn-primary" > <i class="fas fa-pen"></i> Güncelle</button>

</form>

