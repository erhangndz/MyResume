@model List<ResultAboutMeDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int count = 0;
}

<h3>Kişisel Bilgiler</h3>

<table class="table table-hover table-striped">
    <tr>
        <th>#</th>
        <th>Ad Soyad</th>
        <th>Unvan</th>
        <th>CV Linki</th>
        <th>Video Linki</th>
        <th></th>
    </tr>
    @foreach (var item in Model)
    {
        count++;
        <tr>
            <th>@count</th>
            <td><img src="@item.ImageUrl" style="height:50px;width:50px;border-radius:50%" />   @item.NameSurname</td>
            <td>@item.Title</td>
            <td><a href="@item.CVUrl" target="_blank">CV Linki</a> </td>
            <td><a href="@item.VideoUrl" target="_blank">Video Linki</a> </td>
            <td>
                <a asp-asp-controller="AboutMe" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger"><i class="fas fa-trash"></i> Sil</a>
                <a asp-asp-controller="AboutMe" asp-action="Update" asp-route-id="@item.Id" class="btn btn-outline-info"> <i class="fas fa-pen"></i> Güncelle</a>
            </td>
        </tr>
    }
</table>

<a asp-asp-controller="AboutMe" asp-action="Create" class="btn btn-primary"><i class="fas fa-plus-circle"></i> Yeni Bilgi Oluştur</a>