@model List<ResultEducationDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int count = 0;
}

<h3>Eğitimler</h3>

<table class="table table-hover table-striped">
    <tr>
        <th>#</th>
        <th>Üniversite Adı</th>
        <th>Bölüm</th>
        <th>Başlama-Mezuniyet</th>
        <th></th>
    </tr>
    @foreach (var item in Model)
    {
        count++;
        <tr>
            <th>@count</th>
            <td>@item.SchoolName</td>
            <td>@item.Department</td>
            <td>@item.StartYear - @item.FinishYear</td>
            <td>
                <a asp-asp-controller="Education" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger"> <i class="fas fa-trash"></i> Sil</a>
                <a asp-asp-controller="Education" asp-action="Update" asp-route-id="@item.Id" class="btn btn-outline-info"> <i class="fas fa-pen"></i> Güncelle</a>
            </td>
        </tr>
    }
</table>

<a asp-asp-controller="Education" asp-action="Create" class="btn btn-primary"> <i class="fas fa-plus-circle"></i> Yeni Eğitim Oluştur</a>

