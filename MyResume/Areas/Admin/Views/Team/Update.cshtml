@model UpdateTeamDto
@{
    ViewData["Title"] = "Update";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h3>Ekip Arkadaşı Güncelle</h3>

<form method="post">
    <input type="hidden" asp-for="Id" />
    <label>Ad Soyad</label>
    <input type="text" asp-for="NameSurname" class="form-control" />
    <span asp-validation-for="NameSurname" class="text-danger"></span>
    <br />
    <label>Unvan</label>
    <input type="text" asp-for="Title" class="form-control" />
    <span asp-validation-for="Title" class="text-danger"></span>
    <br />
    <label>Görsel Url</label>
    <input type="text" asp-for="ImageUrl" class="form-control" />
    <span asp-validation-for="ImageUrl" class="text-danger"></span>
    <br />

    <button class="btn btn-primary"><i class="fas fa-save"></i> Kaydet</button>
</form>

